            <TextView
                android:layout_marginStart="30dp"
                android:id="@+id/barcode"
                android:text="0000000000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvIdP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:text="0000000000000"
                android:textSize="15sp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/tvNombreP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvIdP"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:text="@string/form_product"
                android:textSize="15sp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/tvCantidadP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvPrecioP"
                android:layout_marginTop="5dp"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@id/tvUnidadP"
                android:text="Cantidad: "
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvUnidadP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvIdP"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/tvNombreP"
                android:text="unidad"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvCantidadNumP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvPrecioP"

                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/tvCantidadP"
                android:text="0"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvPrecioP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/tvIdP"
                android:text="Precio Venta: $"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvPrecioNumP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/tvPrecioP"
                android:text="00.00"
                android:textSize="15sp" />
